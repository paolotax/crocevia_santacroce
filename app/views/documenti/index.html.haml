= content_for :left_col do
  .span3.side-bar
    %ul.nav.nav-list.well
      %li.nav-header
        Documenti
      %li
        = link_to documenti_url do
          tutti i documenti
      %li.divider
      %li
        = link_to movimenti_path do
          tutti i movimenti    

%section.documenti.span9
  .page-header
    = link_to "#", class: "btn btn-stampami pull-right", onclick: "window.print();return false;", "data-no-turbolink" => true do
      %i.icon-print
      Stampami
    %h1 Documenti 
  %table.table
    - @documenti_per_giorno.each do |month, days|
      %tr
        %td= l month, format: :long_month
        = importo_per_mese(@documenti)
        = importo_per_mese(days.values, 'rimborso')

      - days.each do |giorno, documenti|
        %tr
          %td.giorno{colspan: 2, style: "padding-top: 18px" }
            = link_to lista_documenti_path(year: giorno.year, month: giorno.month, day: giorno.day) do
              %h4= l giorno, format: :long
          %td.incasso{colspan: 2, style: "padding-top: 20px"}
            - if documenti.select{ |m| m.cassa?}.sum(&:importo) > 0
              incasso
              %h4= number_to_currency documenti.select{ |m| m.cassa?}.sum(&:importo)
          %td.rimborsi{colspan: 2, style: "padding-top: 20px"}
            - if documenti.select{ |m| m.rimborso?}.sum(&:importo) > 0
              rimborsi
              %h4= number_to_currency documenti.select{ |m| m.rimborso?}.sum(&:importo)
  
        = render documenti   

  
  = paginate @paged
