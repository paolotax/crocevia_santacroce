= content_for :left_col do
  .span3.side-bar
    %ul.nav.nav-list.well
      %li.nav-header
        %i.icon-gift
        Documenti
        
      %li
        = link_to documenti_url, remote: true do
          %i.icon-gift
          tutti
      %li.divider


.span9
  .page-header
    %h1 Documenti 
  %table.table
    - @documenti_per_giorno.each do |giorno, documenti|
      %tr
        %td{colspan: 7}
          %strong= l giorno, format: :long
        / %td.provvigione
        /   importo:
        /   %strong= number_to_currency documenti.sum(&:importo)
      = render documenti
  = paginate @documenti
