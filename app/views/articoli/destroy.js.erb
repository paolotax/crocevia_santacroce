$("#<%=  dom_id(@articolo) %>").remove();

$(".table-footer .quantita strong").html("<%= @articolo.cliente.articoli.attivo.sum(&:quantita)  %>")
$(".table-footer .prezzo strong").html("<%= number_to_currency @articolo.cliente.articoli.attivo.sum(&:importo) %>")
$(".table-footer .provvigione strong").html("<%= number_to_currency @articolo.cliente.articoli.sum(&:importo_cliente) %>")

if ($(".articoli .articolo").length == 1) {
  $(".table-header").addClass("hidden");
  $(".table-footer").addClass("hidden");
  $(".empty-rows").removeClass("hidden");
}
