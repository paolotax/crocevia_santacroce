$("#<%=  dom_id(@articolo) %>").remove();

$("#articoli-da-caricare .table-footer .quantita strong").html("<%= @articolo.cliente.articoli.attivo.sum(&:quantita)  %>")
$("#articoli-da-caricare .table-footer .prezzo strong").html("<%= number_to_currency @articolo.cliente.articoli.attivo.sum(&:importo) %>")
$("#articoli-da-caricare .table-footer .provvigione strong").html("<%= number_to_currency @articolo.cliente.articoli.sum(&:importo_cliente) %>")

if ($("#articoli-da-caricare .articolo").length == 1) {
  $("#articoli-da-caricare .table-header").addClass("hidden");
  $("#articoli-da-caricare .table-footer").addClass("hidden");
  $(".empty-rows").removeClass("hidden");
}

$("input[value='<%= @articolo.id %>']").remove();
