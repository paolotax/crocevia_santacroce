.row
  .span3.side-bar
    .well
      %ul.nav.nav-list
        %li.nav-header
          %i.icon-gift
          Articoli
          
        %li
          = link_to articoli_url, remote: true do
            %i.icon-gift
            tutti
        %li.divider
        
      = search_form_for @q, remote: true do |f|
        = f.text_field :nome_cont, class: "search-query", placeholder: "cerca articolo", style: "width: 152px; margin-bottom: 10px"
        .pull-right.clearfix= f.submit "cerca", class: "btn", name: nil

        / = search_form_for @search, url: search_articoli_path, method: :post do |f|
        /   = f.condition_fields do |c|
        /     = render "condition_fields", f: c            
        /   %p= link_to_add_fields "Add Conditions", f, :condition
        /   .field
        /     Sort:
        /     = f.sort_fields do |s|
        /       = s.sort_select
        /   .actions= f.submit "Cerca"
          
  
  .span9
    %h1 Articoli
    %br
    %table.table
      = render "articoli_header"
      %tbody.articoli  
        - for articolo in @articoli do
          = render articolo
    = paginate @articoli, remote: true;
