= content_for :left_col do
  .span3.side-bar
    .well
      %ul.nav.nav-list
        %li.nav-header
          %i.icon-gift
          Articoli
          
        %li
          = link_to articoli_url, remote: true do
            %i.icon-gift
            tutti
        %li.divider
        
      = search_form_for @q,  html: {class: "form-search", remote: true} do |f|
        .input-append
          = f.text_field :index_cont, class: "search-query", placeholder: "cerca articolo", style: "width: 110px"
          = button_tag class: "btn", name: nil do
            %i.icon-search
              
.span9
  .page-header
    %h1 Articoli 
  %table.table
    = render "articoli_header"
    %tbody.articoli  
      - for articolo in @articoli do
        = render articolo
  = paginate @articoli, remote: true;
