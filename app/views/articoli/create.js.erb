$("#articoli-da-caricare .table-footer").before("<%= escape_javascript(render @articolo) %>");

$("input#articolo_nome").val("");
$("input#articolo_prezzo").val("")
$("input#articolo_quantita").val(1)

$("input#articolo_nome").focus();

$("#articoli-da-caricare .table-footer .quantita strong").html("<%= @articolo.cliente.articoli.attivo.attivo.sum(&:giacenza)  %>")
$("#articoli-da-caricare .table-footer .prezzo strong").html("<%= number_to_currency @articolo.cliente.articoli.attivo.sum(&:importo) %>")
$("#articoli-da-caricare .table-footer .provvigione strong").html("<%= number_to_currency @articolo.cliente.articoli.attivo.sum(&:importo_provvigione) %>")


$("#articoli-da-caricare .table-header").removeClass("hidden")
$("#articoli-da-caricare .table-footer").removeClass("hidden")
$(".empty-rows").addClass("hidden")

$("#form_articoli").append("<input type='hidden' name='articolo_ids[]' value='<%= @articolo.id %>'/>")