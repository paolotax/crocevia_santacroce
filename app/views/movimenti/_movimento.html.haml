%tr[movimento]
  / %tr[movimento]{class: "#{movimento.patate? == true ? 'patate' : ''} #{movimento.scaduto? == true ? 'scaduto' : ''}"}
  %td= link_to "art.#{movimento.articolo_id}", movimento.articolo
  %td= movimento.articolo.nome if movimento.articolo.present?
  %td.quantita= movimento.quantita
  %td.prezzo= number_to_currency movimento.prezzo
  %td.provvigione= number_to_currency movimento.importo_provvigione
  %td
    - if movimento.patate?
      .label.label-info.pull-left
        patate
    - if movimento.scaduto? && !movimento.patate?
      .label.label-warning.pull-left
        scaduto    
  %td
    - if movimento.da_rimborsare?
      .label.label-important.pull-left
        da rimborsare
  %td
    = link_to movimento, method: :delete, class: "close", remote: true, "data-no-turbolink" => true do
      &times;