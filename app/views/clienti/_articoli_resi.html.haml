%section.articoli_resi
  %header
    %h3 
      Articoli resi
      %small= link_to "...", "#articoli-resi", class: "show-hide collapsed", data: { toggle: "collapse", "no-turbolink" => true }
  #articoli-resi.collapse
    %table.table.articoli      
      %tr.table-header{ class: "#{'hidden' unless cliente.has_articoli_registrati? }" }
        %th.codice Codice
        %th.articolo Articolo
        %th.prezzo Prezzo
        %th.provvigione Provvigione
        %th

      - for articolo in cliente.rese do
        = render 'movimenti/movimento', movimento: articolo

      %tr.table-footer{ class: "#{'hidden' unless cliente.has_articoli_registrati? }"}
        %td{ colspan: 2} Totale
        %td.quantita
          %strong= cliente.rese.sum(&:quantita) 
        %td.prezzo
          %strong= number_to_currency cliente.rese.sum(&:importo)
        %td.provvigione
          %strong= number_to_currency cliente.rese.sum(&:importo_cliente)
        %td.actions{ colspan: 2}