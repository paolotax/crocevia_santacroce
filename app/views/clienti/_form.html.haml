= simple_form_for @cliente, :html => { :class => 'form-horizontal', style: "background-color: white" } do |f|
  
  
  
  .row
    .span12.well
      = f.error_notification
      .row
        .span6
          %fieldset.dati-anagrafici
            %legend Dati anagrafici
            .control-group.form-inline
              %label{ for: :nome, :class => 'string required control-label'} Nome e Cognome
              .controls
                = f.text_field :nome
                = f.text_field :cognome
            = f.input   :sesso, collection: ["m", "f"]
            = f.input   :data_di_nascita_text, label: "Data di nascita"
            = f.input   :comune_di_nascita
            .control-group
              %label{ for: :codice_fiscale, :class => 'string control-label'} Codice fiscale
              .controls
                = f.text_field :codice_fiscale
                %span.help-block.get-cf
                  = link_to "Crea codice", crea_codice_fiscale_cliente_path(@cliente)

            = f.input   :partita_iva
            = f.input   :ragione_sociale
            
        .span6
          %fieldset
            %legend Documento d'identitÃ 
            = f.input :tipo_documento, collection: ["carta d'identitÃ ", "patente", "passaporto"]
            = f.input :numero_documento
            = f.input :documento_rilasciato_da, label: "Rilasciato da"
            = f.input :data_rilascio_documento_text, label: "Data rilascio"

      .row
        .span6
          %fieldset
            %legend Indirizzo
            = f.input :indirizzo
            = f.input :cap
            = f.input :citta
            = f.input :provincia
        .span6
          %fieldset
            %legend Recapiti & note
            = f.input :telefono
            = f.input :cellulare
            = f.input :email
            = f.input :note,  :input_html => { :rows => 2 }
      
      = f.error :base
      
      .form-actions
        = f.button :submit, :class => 'btn btn-primary'
        = link_to "Annulla", @cliente, :class => 'btn btn-danger'
