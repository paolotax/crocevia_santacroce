= content_for :left_col do
  .span3.side-bar
    %ul.nav.nav-list.well
      %li.nav-header
        %i.icon-user
        Clienti
      %li
        = link_to new_cliente_url do
          %i.icon-plus
          Nuovo
      %li
        = link_to edit_cliente_url(@cliente) do
          %i.icon-pencil
          Modifica
      %li
        = link_to clienti_url do
          %i.icon-user
          tutti
      %li.divider
      %li
        = link_to mandato_cliente_url(@cliente) do
          %i.icon-print
          Stampa mandato
      %li
        = link_to tessera_cliente_url(@cliente, format: 'pdf'), target: "_blank" do
          %i.icon-tag
          Stampa tessera    
      %li
        = link_to situazione_cliente_url(@cliente, format: 'pdf'), target: "_blank" do
          %i.icon-money
          Stampa situazione    

.span9
  
  %h3= @cliente.full_name

  %address
    = @cliente.indirizzo
    %br
    = "#{@cliente.cap} #{@cliente.citta} #{@cliente.provincia}"

  .dati-fiscali
    = @cliente.codice_fiscale
    = @cliente.partita_iva

  .info_documento
    = @cliente.tipo_documento
    = "num. #{@cliente.numero_documento}"
    = "rilasciato da: #{@cliente.documento_rilasciato_da}"
    = "il #{@cliente.data_rilascio_documento.try(:strftime, "%d-%m-%y")}"
  
  %br
  = render 'articoli_attivi'
  %br
  
  .articoli-in-giacenza
    = render 'articoli/articoli_list', label: "articolo_in_giacenza", collection: @cliente.articoli.registrato.disponibili.non_eli.order("articoli.documento_id desc, articoli.id")
  
  .articoli-venduti
    = render 'attenzione_cassa', cliente: @cliente
    = render 'attenzione_rimborso', cliente: @cliente
    = render 'movimenti/movimenti_list',  collection: @cliente.vendite.non_eli.da_rimborsare, label: "articolo_venduto"

  .articoli-resi
    = render 'attenzione_resa', cliente: @cliente
    = render 'movimenti/movimenti_list',  collection: @cliente.rese.attivo,    label: "articolo_reso_da_registrare"

  - unless @cliente.rimborsi.empty?  && @cliente.resi.empty? 
    .articoli-storici
      %h4 Rimborsi & Rese
      %table.table.articoli-rimborsati
        = render (@cliente.rimborsi + @cliente.resi).sort {|a, b| b.id <=> a.id}
    